{
  "expo": {
    "name": "Aratile",
    "slug": "aratile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "jsEngine": "hermes",
    "splash": {
      "image": "./assets/logo-aratile.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSContactsUsageDescription": "این برنامه برای نمایش نام مخاطبین در لیست تماس‌ها به مخاطبین شما نیاز دارد."
      }
    },
    "android": {
      "package": "com.aratile",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo-aratile-1.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [

        "android.permission.READ_CONTACTS",
        "android.permission.READ_CALL_LOG",
        "android.permission.READ_PHONE_STATE",
        "android.permission.READ_PHONE_NUMBERS",
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "favicon": "./assets/logo-aratile-1.png"
    },
    "plugins": [
      "expo-barcode-scanner",
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true,
            "permissions": [
   
              "android.permission.READ_CONTACTS",
              "android.permission.READ_CALL_LOG",
              "android.permission.READ_PHONE_STATE",
              "android.permission.READ_PHONE_NUMBERS"
            ]
          }
        }
      ]

    ],
    "extra": {
      "eas": {
        "projectId": "3aec5971-75b3-4df4-8596-0d8edf57b3c9"
      }
    },
    "doctor": {
      "reactNativeDirectoryCheck": {
        "exclude": ["expo-barcode-scanner"]
      }
    }
  }
}
